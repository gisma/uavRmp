Package: uavRmp
Type: Package
Title: UAV Mission Planner
Version: 0.5.2
Date: 2017-11-15
Authors@R: c(person("Chris", "Reudenbach", email = "reudenbach@uni-marburg.de", role = c("cre", "aut")),
             person("Sebastian", "Richter", role = c("ctb")),
             person("Lars", "Opgenoorth",  role = c("ctb")),
